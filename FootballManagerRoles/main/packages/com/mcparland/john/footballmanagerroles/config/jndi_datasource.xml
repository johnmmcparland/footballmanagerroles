<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Load properties -->
	<bean id="jndiDataSourceProperties"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="classpath:com/mcparland/john/footballmanagerroles/config/jndi_datasource.properties" />
	    <!-- Allow for other property placeholder configurers -->
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>

	<!-- Database connection -->
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="${jndi.name}" />
		<property name="resourceRef" value="${jndi.resource.ref}" />
	</bean>

</beans>
